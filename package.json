{
  "name": "tiptap-md-converter",
  "version": "0.0.0",
  "private": true,
  "homepage": "https://ravedico.github.io/tiptap-md-converter/",
  "type": "module",
"scripts": {
    "predeploy": "npm run build && cp dist/index.html dist/404.html",
    "deploy": "gh-pages -d dist",
    "dev": "vite",
    "build": "tsc -b && vite build",
    "lint": "eslint .",
    "preview": "vite preview",
    "md:smoke": "tsx src/markdown-core/dev-smoke.ts",
    "typecheck": "tsc -p tsconfig.typecheck.json --noEmit",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "test:run": "vitest run",
    "test:cov": "vitest run --coverage"
  },
  "dependencies": {
    "@tiptap/core": "^2.26.2",
    "@tiptap/extension-link": "^2.26.2",
    "@tiptap/extension-placeholder": "^2.26.2",
    "@tiptap/extension-table": "^2.26.2",
    "@tiptap/extension-table-cell": "^2.26.2",
    "@tiptap/extension-table-header": "^2.26.2",
    "@tiptap/extension-table-row": "^2.26.2",
    "@tiptap/extension-task-item": "^2.26.2",
    "@tiptap/extension-task-list": "^2.26.2",
    "@tiptap/react": "^2.26.2",
    "@tiptap/starter-kit": "^2.26.1",
    "react": "^19.1.1",
    "react-dom": "^19.1.1"
    
  },
  "devDependencies": {
    "@eslint/js": "^9.36.0",
    "@types/mdast": "^4.0.4",
    "@types/node": "^24.5.2",
    "@types/react": "^19.1.13",
    "@types/react-dom": "^19.1.9",
    "@types/unist": "^3.0.3",
    "@vitejs/plugin-react": "^5.0.3",
    "@vitest/coverage-v8": "^3.2.4",
    "eslint": "^9.36.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "gh-pages": "^6.3.0",
    "globals": "^16.4.0",
    "happy-dom": "^18.0.1",
    "remark-gfm": "^4.0.1",
    "remark-parse": "^11.0.0",
    "remark-stringify": "^11.0.0",
    "tsx": "^4.20.5",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.44.0",
    "unified": "^11.0.5",
    "vite": "^7.1.7",
    "vitest": "^3.2.4"
  }
}
